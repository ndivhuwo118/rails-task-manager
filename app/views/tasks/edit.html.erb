<h1>Edit Task</h1>

<%= form_with model: @task, local: true do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :details %>
    <%= form.text_area :details %>
  </div>

  <div class="field">
    <%= form.check_box :completed %>
    <%= form.label :completed %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back to Task', task_path(@task) %> |
<%= link_to 'Back to List', tasks_path %>
